body

	div.container
		div.row.text-center
			div.header.text-danger.col-sm-12.text-center
				h1 Search Results	
			div.col-sm-12
				- for(let i = 0; i < 6; i++) 
					div
						img(src=wineArray.wines[i].image)
						div
							span #{wineArray.wines[i].name}
						div
							strong Variety: 
							span #{wineArray.wines[i].varietal}
						div
							strong Price: 
							span #{wineArray.wines[i].price}
						div
							strong Rank: 
							span #{wineArray.wines[i].snoothrank }
						br
					
			