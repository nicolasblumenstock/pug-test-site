extends layout

block styles
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

	link(rel="stylesheet" type="text/css" href="/stylesheets/style.css")

block scripts

	//- script(type="text/javascript" src="/javascripts/scripts.js")
block content

	div(class="container")
		div(class="row text-center")
			div(class="header text-danger col-sm-12 text-center")
				h1 Search Results	
			div(class="col-sm-12")
				- for(let i = 0; i < 6; i++)
					div
						img(src= wineArray.wines[i].image)
						div #{wineArray.wines[i].name}
						div
							strong Vintage: 
							span #{wineArray.wines[i].vintage}
						div
							strong Variety: 
							span #{wineArray.wines[i].varietal}
						div
							strong Price: $
							span #{wineArray.wines[i].price}
						div
							strong Rank: 
							span #{wineArray.wines[i].snoothrank} /5
						div
							strong Recipe Pairing ID: 
							span #{wineArray.wines[i].winery_id}
						br
					
					