extends layout

block styles
	link(rel='stylesheet' href='stylesheets/style.css')

block scripts
	script(src='javascripts/scripts.js')

block content

	div.container
		div.wine-menu.col-sm-10.col-sm-offset-1
			div.left-menu.col-sm-5
				h4 
					strong Find Wine Suggestions
					br
				form.form(action="/color" method="post")
					fieldset
						h5 What type of beverage do you prefer?
						select(name="searchType")
							option  
							option Wine
							option Spirits         <!-- selected="selected" -->
							option Table
							option Dessert
							option Sparkling
							option Fruit
							option Cider
							option Sake

						h5 What color wine do you prefer
						select(name="searchColor")
							option 
							option Red
							option White
							option Rose         <!-- selected="selected" -->
							option Amber
							option Clear

						h5 Search by your favorite type of wine (i.e "Cabernet", "Pinot Noir", "Merlot", "Malbec", "Zinfandel", etc.)
						form(id="search-form" action="/varietal" method="post")
							input(type="text" name="searchVariety")
			
						h5 Min Price
						span $ 
						select(name="searchMinPrice")
							option
							option 10
							option 20
							option 30
							option 40
							option 50         <!-- selected="selected" -->
							option 75
							option 100
							option 200
							option 500
							option 1000
							option 2000
							option None

						h5 Max Price
						span $ 
						select(name="searchMaxPrice")
							option
							option 10
							option 20
							option 30
							option 40
							option 50         <!-- selected="selected" -->
							option 75
							option 100
							option 200
							option 500
							option 1000
							option 2000
							option None

						h5 Sort Seclection By: 
						select(name= "seacrhSort")
							option
							option Quality &#8679
							option Quality &#8681
							option Price &#8679       <!-- selected="selected" -->
							option Price &#8681
						
						button(type="submit") Find wines
				br
				div OR
				br

				//- h5 Search by your favorite type of wine (i.e "Cabernet", "Pinot Noir", "Merlot", "Malbec", "Zinfandel", etc.)
				//- form(id="search-form" action="/varietal" method="post")
				//- 	input(type="text" name="searchVariety")
				//- 	button(type="submit") Search
			div(class="right-menu col-sm-5 col-sm-offset-2")
				h4
					strong Find Recipe Pairings
					br
				form(id="search-form" action="/wine-recipes" method="post")
					input(type="text" name="searchString")
					button(type="submit") Search
				
